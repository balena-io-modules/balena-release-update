{
  "name": "@balena/release-update",
  "version": "0.0.5",
  "description": "Prepare and get information about the transition between two balenaCloud application releases",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/balena-io-modules/balena-release-update"
  },
  "author": "Balena Ltd.",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "bin": {
    "balena-release-update": "./bin/balena-release-update.js"
  },
  "files": [
    "tsconfig.json",
    "bin/",
    "build/"
  ],
  "scripts": {
    "clean": "rimraf ./build",
    "build": "npm run clean && tsc --project ./tsconfig.json",
    "lint-fix": "balena-lint --fix bin/ lib",
    "lint": "balena-lint bin/ lib && tsc --noEmit",
    "prepack": "npm run build",
    "test": "npm run lint && npm run build && catch-uncommitted --catch-no-git --skip-node-versionbot-changes",
    "prepare": "node -e \"try { (await import('husky')).default() } catch (e) { if (e.code !== 'ERR_MODULE_NOT_FOUND') throw e }\" --input-type module"
  },
  "dependencies": {
    "@types/node": "^22.19.0",
    "balena-sdk": "^15.41.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@balena/lint": "^9.3.8",
    "catch-uncommitted": "^2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "rimraf": "^6.1.0"
  },
  "engines": {
    "node": "^20.12.0 || >= 22.0.0"
  },
  "versionist": {
    "publishedAt": "2021-09-01T10:27:57.080Z"
  }
}
